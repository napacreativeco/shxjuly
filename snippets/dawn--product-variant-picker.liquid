{%- for option in product.options_with_values -%}
    <fieldset class="js product-form__input">

      <span class="variant-selector-title">
        {{ option.name }} 

        {% if option.name == 'Size' %}
          <span class="selected-size-variant">
            {{ '(' | escape }}{{ product.first_available_variant.option1 }}{{ ')' | escape }}
          </span>
        {% endif %}

        {% if option.name == 'Color' %}
          <span class="selected-color-variant">
            {{ '(' | escape }}{{ product.first_available_variant.option2 }}{{ ')' | escape }}
          </span>
        {% endif %}

        <span class="selected-variant {{ option.id }}"></span>

        {% render 'icon--caret' %}

      </span>

      <div class="variant-selector-box">
        {% render 'dawn--product-variant-options', product: product, option: option, block: block %}
      </div>
      
    </fieldset>
{%- endfor -%}